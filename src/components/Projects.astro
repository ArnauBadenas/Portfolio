---
import CSHARPIcon from './icons/Csharp.astro';
import UnityIcon from './icons/Unity.astro';
import TypescriptIcon from './icons/TypeScript.astro';

import santuarioAnimalHomeImage from '../assets/img/santuario-animal-home.png';

const TAGS = {
	CSHARP: {
		name: 'C#',
		class: 'bg-fuchsia-800/80 text-white',
		icon: CSHARPIcon,
	},
	UNITY: {
		name: 'Unity',
		class: 'bg-black/80 text-white',
		icon: UnityIcon,
	},
	TYPESCRIPT: {
		name: 'Typescript',
		class: 'bg-blue-800/70 text-white',
		icon: TypescriptIcon,
	},
};

const PROJECTS = [
	{
		title: 'ダンダン ギャンブル (Dan Dan Gamble)',
		description:
			'みんなのガムブル es un juego de apuestas donde debes ganar contra la gente mas peligrosa de japón',
		link: 'https://arnaubv.itch.io/dan-dan-gamble',
		github: 'https://github.com/ArnauBadenas/gameja2024ocatus',
		image: 'https://img.itch.zone/aW1nLzE0NjYxNzQ1LnBuZw==/315x250%23c/2WM92r.png',
		tags: [TAGS.UNITY, TAGS.CSHARP],
	},
	{
		title: 'A little help',
		description:
			'Un juego sobre cómo tus acciones pueden impactar a los demás.',
		link: 'https://arnaubv.itch.io/a-little-help',
		github: 'https://github.com/ArnauBadenas/GamejaNavideja2022',
		image: 'https://img.itch.zone/aW1nLzEwOTM4NTQ5LnBuZw==/315x250%23c/9UyZ8b.png',
		tags: [TAGS.UNITY, TAGS.CSHARP],
	},
	{
		title: 'La balada del roh',
		description:
			'La Balada del Roh es un RPG/ Simulador inmersivo de un universo completamente distópico. Diseñado, programado y realizado para la Gameja 2021.',
		link: 'https://riibber.itch.io/la-balada-del-roh-gameja-21',
		github: 'https://github.com/La-gameja-navideja-2021/RepeatSlash',
		image: 'https://img.itch.zone/aW1nLzY4MDE3MDIucG5n/315x250%23c/sl3ihW.png',
		tags: [TAGS.UNITY, TAGS.CSHARP],
	},
	{
		title: 'Santuario animal',
		description:
			'Página web para una protectora para dar a conocer a sus animales y facilitar la adopción y ayuda.',
		github: 'https://github.com/PaulaGDopico/SantuarioAnimal',
		image: santuarioAnimalHomeImage.src,
		tags: [TAGS.TYPESCRIPT],
	},
];
---

<section class="grid sm:grid-cols-1 md:grid-cols-2 gap-4">
	{
		PROJECTS.map(({ title, description, link, github, image, tags }) => (
			<article class="py-2">
				<a
					href={link}
					target="_blank">
					<img
						class="border rounded shadow-2xl shadow-white/10 hover:scale-[102%] cursor-pointer"
						src={image}
						alt={title}
					/>
				</a>
				<h3 class="text-2xl font-semibold text-orange-200 mb-2">
					{title}
				</h3>
				<p class="text-lg mb-4 text-pretty">{description}</p>
				<ul class="flex gap-x-2">
					{tags.map((tag) => (
						<li>
							<span
								class={`flex items-center gap-x-2 rounded-full text-sm py-1 px-2 ${tag.class}`}>
								<tag.icon class="size-4" />
								{tag.name}
							</span>
						</li>
					))}
				</ul>
			</article>
		))
	}
</section>
